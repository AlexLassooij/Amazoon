@model IEnumerable<mongoTest.Models.ItemView>
@{
    ViewBag.Title = "Order";
}

<h1>Place an order</h1>
<h2>Available Items</h2>

<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.amountAvailable)
            </td>
        </tr>
    }
</table>

<form action="Order/PlaceOrder" method="post">
    <table>
        <tr>
            <td>Enter Name: </td>
        </tr>
        <tr>
            <td><input type="text" name="customerName" /></td>
        </tr>
        <tr>
            <td>Enter items as comma separated list of name and amount, e.g. pants 5, broccoli 2 </td>
        </tr>
        <tr>            
            <td><input type="text" name="orderDetails" /></td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Submit Form" /></td>
        </tr>
    </table>
</form>
